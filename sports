<div class="module">
  
  <div class="module-title">
    <h2>Sports News</h2>
  </div>
  <div class="module-body">
    
  </div>
 
</div>




function getSportsNews() {
  var api = "https://newsapi.org/v2/top-headlines?sources=bbc-sport&apiKey=94d15b4fc0ea4ac8a2102b268ac422de";
  $.ajax(api).done(function(r) {
  
  console.log(r.articles[0]);
  for (i = 0; i < 5; i++) {
  var $div = $("<div>");
  var $br = $("<br>");
  var article = $div.html(
  "<h3>"+ r.articles[i].title +"</h3> <p>" +
  r.articles[i].description + "</p>")
  
  $(".module-body").append(article);
  
  }
  
  getSportsNews();
